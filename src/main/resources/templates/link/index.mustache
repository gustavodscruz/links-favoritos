<!DOCTYPE html>
<html lang="pt-br">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Seus Links - Links Favoritos</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-sRIl4kxILFvY47J16cr9ZwB07vP4J8+LH7qKQnuqkuIAvNWLzeN8tE5YBujZqJLB" crossorigin="anonymous">
    <link rel="stylesheet" href="/css/link-add.css">
    <link rel="stylesheet" href="/css/dashboard.css">

</head>

<body class="bg-light">
    {{> partials/header}}

    {{#success}}
    <div class="alert alert-success" role="alert">{{success}}</div>
    {{/success}}

    {{#error}}
    <div class="alert alert-danger" role="alert">{{error}}</div>
    {{/error}}

    {{#deletedSuccess}}
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        {{deletedSuccess}}
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
    {{/deletedSuccess}}
    {{#deletedError}}
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        {{deletedError}}
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
    {{/deletedError}}

    <main class="container my-5">
        <!-- Section Header with Add Button -->
        <div class="card border-0 shadow-sm mb-4">
            <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
                <h5 class="mb-0">Seus links</h5>
                <!-- Link Add Button -->
                <a href="/link/add" class="btn btn-light">‚ûï Adicionar Link</a>
            </div>
            <!-- Filter Form -->
            <div class="card-body d-flex align-items-center">
                <form action="/link/" method="get" class="d-flex align-items-center w-100">
                    <label for="categoria" class="me-2 mb-0">Filtrar por Categoria:</label>
                    <select id="categoria" name="categoria" class="form-select me-3"
                        onchange="if (this.value === '') { window.location.href = '/link'; } else { this.form.submit(); }">
                        <option value="">Todas</option>
                        {{#listagem-categorias}}
                        <option value="{{id}}">{{name}}</option>
                        {{/listagem-categorias}}
                    </select>
                    {{#filteredBy}}
                    <script>
                        // mant√©m sele√ß√£o ap√≥s carregamento
                        document.getElementById('categoria').value = '{{filteredBy}}';
                    </script>
                    {{/filteredBy}}
                </form>
            </div>
        </div>
        <div class="row g-4">
            {{#links}}
            <div class="col-12 col-md-6 col-lg-4">
                <div class="card border-0 shadow-sm h-100">
                    {{#thumbnailPreview}}
                    <img src="{{thumbnailPreview}}" class="card-img-top link-preview" alt="preview">
                    {{/thumbnailPreview}}
                    <div class="card-body d-flex flex-column">
                        <h6 class="card-title">{{#name}}{{name}}{{/name}}</h6>
                        <p class="card-text">{{#description}}{{description}}{{/description}}</p>
                        <div class="mb-2">
                            <a href="{{url}}" target="_blank"
                               class="btn btn-sm btn-outline-primary w-100 text-start text-truncate">
                                üîó {{url}}
                            </a>
                        </div>
                        <div class="mb-2">
                            {{#categorias}}
                            <span class="badge bg-primary text-light me-1">{{name}}</span>
                            {{/categorias}}
                        </div>
                        <div class="mt-auto d-flex justify-content-between">
                            <a href="/link/edit?link={{id}}" class="btn btn-sm btn-outline-primary">‚úèÔ∏è Editar</a>
                            <form action="/link/delete" method="post" class="m-0">
                                <input type="hidden" name="id" value="{{id}}">
                                {{> partials/csrf}}
                                <button class="btn btn-sm btn-danger" onclick="return confirm('Excluir link?')">üóëÔ∏è</button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
            {{/links}}
            {{^links}}
            <div class="col-12 text-center text-muted">Nenhum link encontrado.</div>
            {{/links}}
        </div>
    </main>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-FKyoEForCGlyvwx9Hj09JcYn3nv7wiPVlz7YYwJrWVcXK/BmnVDxM+D2scQbITxI"
        crossorigin="anonymous"></script>
</body>

</html>