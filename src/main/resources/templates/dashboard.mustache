                <span class="me-3 small-note">OlÃ¡, <strong>{{nome}}</strong></span>
                <form action="/logout" method="post" class="m-0">
                    <input type="hidden" name="{{_csrf.parameterName}}" value="{{_csrf.token}}">
                    <button class="btn btn-sm btn-outline-primary" type="submit">Sair</button>
                </form>
            </div>
        </div>
    </nav>

    <div class="container mt-4 mb-5">
        <div class="hero">
            <div class="row align-items-center">
                <div class="col-md-7">
                    <h4 class="mb-1">Bem-vindo de volta! ðŸ‘‹</h4>
                    <p class="small-note mb-0">Gerencie seus links e categorias em um sÃ³ lugar.</p>
                </div>
                <div class="col-md-5 text-md-end mt-3 mt-md-0">
                    <a href="/categoria/add" class="btn btn-light me-2">Gerenciar Categorias</a>
                    <a href="/add-link" class="btn btn-outline-light">Novo Link</a>
                </div>
            </div>
        </div>

        <div class="row g-4">
            <div class="col-md-8">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">ðŸ“‚ Suas Categorias</h5>
                        {{#categorias}}
                        <div class="categoria-item d-flex justify-content-between align-items-center">
                            <div>
                                <div class="fw-medium">{{name}}</div>
                                <div class="small-note">ID: {{id}}</div>
                            </div>
                            <a href="/categoria/add" class="btn btn-sm btn-outline-primary">Gerenciar</a>
                        </div>
                        {{/categorias}}
                        {{^categorias}}
                        <div class="text-center text-muted py-4">
